<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Carp</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <h5 style="color: white;">Classes</h5>
            <ul>
                @foreach (var className in Classes.ToList())
                {
                    <li class="nav-item px-3">
                        <a class="nav-link" href="/@EncodedPath/#@className">
                            @className
                        </a>
                    </li>
                }
            </ul>
        </li>
        <li class="nav-item px-3">
            <h5 style="color: white;">Interfaces</h5>
            <ul>
                @foreach (var interfaceName in Interfaces.ToList())
                {
                <li class="nav-item px-3">
                    <a class="nav-link" href="@EncodedPath/#@interfaceName">
                        @interfaceName
                    </a>
                </li>
                }
            </ul>
        </li>
    </ul>
</div>

@code {
    [Parameter]
    public string EncodedPath { get; set; }

    [Parameter]
    public IEnumerable<string> Classes { get; set; }

    [Parameter]
    public IEnumerable<string> Interfaces { get; set; }

    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
